<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         >
         <cn.xcom.helper.utils.RoundImageView
             android:id="@+id/convenience_photo"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginLeft="10dp"
             android:src="@mipmap/morenimage"/>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="10dp">
             <TextView
                 android:id="@+id/convenience_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="51-证"
                 android:textSize="18sp"
                 android:layout_marginTop="5dp"
                 android:textColor="@color/colorTheme"/>
             <TextView
                 android:id="@+id/convenience_time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="2012-06-12 15:20:03"
                 android:layout_marginTop="10dp"
                 android:textSize="14sp"
                 />
         </LinearLayout>
     </LinearLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="-60dp"
            >

            <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_shanchu_cha"
            android:id="@+id/iv_shanchu" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_jubao"
                android:id="@+id/iv_jubao" />
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@mipmap/ic_me_message"
                 android:layout_marginLeft="40dp"
                 android:id="@+id/convenience_message"/>

             <ImageView
                 android:id="@+id/convenience_phone"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="80dp"
                 android:src="@mipmap/ic_dianhua_xiao"/>
        </RelativeLayout>

    <TextView
        android:id="@+id/convenience_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="饿哦们带的动 的的撒的方法"
        android:textSize="18sp"
        android:textColor="@color/colorTextSale"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <!--<ImageView-->
        <!--android:id="@+id/convenience_image"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:src="@mipmap/aaa"-->
        <!--android:scaleType="fitXY"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10dp"/>-->
    <LinearLayout
        android:id="@+id/image_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cn.xcom.helper.utils.NoScrollGridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridview"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_margin="10dp"
            android:numColumns="3">

        </cn.xcom.helper.utils.NoScrollGridView>

    </LinearLayout>
</LinearLayout>