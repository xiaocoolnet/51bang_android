<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17sp"
            android:text="@string/tv_sign_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_sign_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:gravity="center"
        android:background="@color/colorTheme">
        <TextView
            android:id="@+id/tv_sign_integral"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/tv_sign_integral"
            android:text="0åˆ†"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/colorTextWhite"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/colorTheme"
        android:gravity="center">
        <Button
            android:id="@+id/bt_sign_sign"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:background="@drawable/bt_sign_click"
            android:text="@string/bt_sign_sign"
            android:textColor="@color/colorTextWhite"
            android:textSize="14dp"/>
    </RelativeLayout>

</LinearLayout>