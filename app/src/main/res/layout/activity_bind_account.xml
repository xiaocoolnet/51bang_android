<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17dp"
            android:text="@string/choose_account"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_help_me_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:onClick="onBack"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/ic_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/zhifubao"
            />
        <TextView
            android:id="@+id/tv_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:layout_toRightOf="@id/ic_zhifubao"
            android:layout_alignTop="@id/ic_zhifubao"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_zhifubao_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[未绑定]"
            android:layout_alignLeft="@id/tv_zhifubao"
            android:layout_below="@id/tv_zhifubao"
            android:textColor="@color/colorTextRed"
            />
        <CheckBox
            android:id="@+id/cb_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_bg2"
            android:button="@null"
            android:clickable="false"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/ic_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/yinhangka"
            />
        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:layout_toRightOf="@id/ic_bank"
            android:layout_alignTop="@id/ic_bank"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_bank_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[未绑定]"
            android:layout_alignLeft="@id/tv_bank"
            android:layout_below="@id/tv_bank"
            android:textColor="@color/colorTextRed"
            />
        <CheckBox
            android:id="@+id/cb_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_bg2"
            android:button="@null"
            android:clickable="false"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_login_click"
        android:text="绑定"
        android:textColor="@color/colorTextWhite"
        android:textSize="16dp" />

</LinearLayout>