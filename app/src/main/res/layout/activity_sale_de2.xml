<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.xcom.helper.activity.SaleDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dip"
                android:background="@color/colorTheme"
                android:gravity="center"
                android:text="@string/tv_login_title"
                android:textSize="17dp"
                android:textColor="@color/colorTextWhite"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:layout_marginTop="-35dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_back_white_left"
                    />
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="15dp"
                android:id="@+id/vp"></android.support.v4.view.ViewPager>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自助烤肉都来吃啊、、、、、、"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:id="@+id/tvContent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#faf3f3"></View>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥38.90"
                android:layout_marginLeft="10dp"
                android:textColor="@color/msg_red"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#f4f3f3"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_locate"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/location">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="烟台市"
                                android:textSize="22sp"/>
                            <TextView
                                android:id="@+id/adress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="芝罘区上尧鲁东大学南校区"
                                android:textSize="22sp"
                                android:textColor="#948888"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_marginTop="10dp"
                    android:id="@+id/callPhone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_me_customer_service_consulting"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3km"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#f4f3f3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/shopPublish"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家发布"
                    android:layout_marginLeft="10dp"
                    android:textSize="22sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_marginLeft="250dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="#f4f3f3"></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="180dp"
                android:background="#f4f3f3"></View>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格：￥38.90"
                    android:id="@+id/tvprice"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/msg_red"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/colorHelpMe"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-32dp"
                android:id="@+id/buy">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="购买"
                    android:textSize="24sp"
                    android:textColor="#ffffff"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
