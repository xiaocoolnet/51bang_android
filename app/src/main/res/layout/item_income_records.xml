<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:orientation="horizontal"
    android:padding="10dip">


    <TextView
        android:id="@+id/tv_item_income_records_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:hint="2016-06-14"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_item_income_records_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="＋1000.00"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_item_income_records_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/tv_item_income_records_time"
        android:text="在线支付"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_item_income_records_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_item_income_records_type"
        android:layout_marginTop="10dip"
        android:text="收入"
        android:textSize="12dp" />

</RelativeLayout>