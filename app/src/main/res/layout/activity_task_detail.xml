<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTheme">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorTextWhite"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_moren"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_dianhua"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_dianhua_xiao"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_xiaoxi"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/rl_dianhua">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_xiaoxi_xiao"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="任务号"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_tradeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T20160250120"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="任务"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_tradeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东快递"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <cn.xcom.helper.record.SoundView
            android:id="@+id/sound_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </cn.xcom.helper.record.SoundView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white">
        <cn.xcom.helper.utils.NoScrollGridView
            android:id="@+id/item_sn_gridpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/background_white"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/background_white"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务费"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.01"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上门地址"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="祥尧街96-2"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="有效期"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09月23日 12:26"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"/>
    </RelativeLayout>
</LinearLayout>
