<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.xcom.helper.activity.SaleDetailActivity">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dip"
                android:background="@color/colorTheme"
                android:gravity="center"
                android:text="@string/tv_login_title"
                android:textSize="17dp"
                android:textColor="@color/colorTextWhite"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:layout_marginTop="-35dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_back_white_left"
                    />
            </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/sv"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:id="@+id/vp"></android.support.v4.view.ViewPager>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自助烤肉都来吃啊、、、、、、"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTextSale"
                android:textSize="16sp"
                android:id="@+id/tvContent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#faf3f3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥38.90"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/msg_red"
                android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/shoucang"
                    android:layout_gravity="center"
                    android:layout_marginLeft="240dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="3dp"
                android:background="#f4f3f3"></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_locate"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/ic_locate"
                            android:layout_marginTop="5dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="烟台市"
                                android:textColor="@color/colorTextSale"
                                android:textSize="16sp"/>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:id="@+id/callPhone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/ic_me_customer_service_consulting"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.3km"
                        android:textColor="@color/colorTextSale"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="3dp"
                android:background="#f4f3f3"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#f4f3f3"></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="210dp"
                android:background="#f4f3f3"></View>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
           android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="价格：￥38.90"
                android:id="@+id/tvprice"

                android:layout_marginLeft="10dp"
                android:textColor="@color/msg_red"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/colorHelpMe"
            android:layout_alignParentRight="true"
            android:id="@+id/buy">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
